                                         For="@(() => _companion.Bow)"
                                         Immediate="true"
                                         Label="Bow"/>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="_companion.Crossbow"
                                         For="@(() => _companion.Crossbow)"
                                         Immediate="true"
                                         Label="Crossbow"/>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="_companion.Throwing"
                                         For="@(() => _companion.Throwing)"
                                         Immediate="true"
                                         Label="Throwing"/>
                    </MudItem>
                    <MudItem xs="4">
                        <MudNumericField @bind-Value="_companion.Riding"
