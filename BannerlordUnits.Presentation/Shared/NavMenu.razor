<MudDrawer @bind-Open="SideBarOpen" Elevation="1">
    <MudDrawerHeader>
        <MudAvatar Color="Color.Transparent" Size="Size.Large" Image="images/logo.png" />
        <MudText Typo="Typo.h5" Color="Color.Primary" Style="margin-top:10px; margin-left:15px;">Bannerlord Units</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
        <MudNavLink Href="/Troops/AllTroops" Icon="@Icons.Material.Filled.Storage">All Troops</MudNavLink>
        <MudNavLink Href="/Troops/CompareTroops" Icon="@Icons.Material.Filled.CompareArrows">Compare Troops</MudNavLink>
        <MudNavLink Href="/Troops/CreateTroops" Icon="@Icons.Material.Filled.CompareArrows">Create Troops</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {

    [Parameter]
    public bool SideBarOpen { get; set; }

}